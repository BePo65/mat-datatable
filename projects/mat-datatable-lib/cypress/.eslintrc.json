{
  "extends": "../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        // Path is relative to the workspace as this file extends the root .eslintrc.json!
        "project": "projects/mat-datatable-lib/cypress/tsconfig.json",
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts"]
        },
        "import/resolver": {
          "node": true,
          "typescript": {
            "project": [
              "projects/mat-datatable-lib/cypress/tsconfig.json"
            ]
          }
        }
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "mat",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "mat",
            "style": "kebab-case"
          }
        ]
      }
    }
  ]
}
